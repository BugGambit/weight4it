{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "moduleResolution": "node",
    "types": []
  },
  "compileOnSave": true,
  "include": [
    "src/*"
  ],
  "exclude": [
    "../node_modules/**/*"
  ]
}
